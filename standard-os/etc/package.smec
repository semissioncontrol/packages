metadata:
 - name: "etc"
 - license: "MPL 3.0"
 - description: "The standard /etc files for SEMC OS"
 - source: "https://github.com/semissioncontrol/packages/standard-os/etc/"
 - source-git: "false"
 - var: "DESTDIR"
 - depends-on: "wget"
 - depends-on: "cd"
 - depends-on: "cp"
 - depends-on: "rm"
 
build:
 - type: "source"
 - version: "0.0.3a"
 - steps:
  - step: "wget raw.githubusercontent.com/etc/"
  - step: "cd etc"
  - step: "cp ./* ${DESTDIR}/etc/"
